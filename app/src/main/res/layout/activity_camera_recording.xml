<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera_recording"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp"
    android:padding="10dp"
    android:background="@drawable/blur1"
    tools:context="com.example.amine.securityapp.cameraRecording">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/camera_title"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#0d4023"
            android:textSize="30dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="430dp"
        android:id="@+id/draw"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/parent"
        android:layout_below="@+id/draw"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i3">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/camera"
                android:background="@mipmap/ic_cam"
                android:text="General"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i4"
            android:layout_toRightOf="@+id/i3">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/save"
                android:background="@mipmap/ic_save"
                android:text="General"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i5"
            android:layout_toRightOf="@+id/i4">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/rotate"
                android:background="@mipmap/ic_rotate"
                android:text="General"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i6"
            android:layout_toRightOf="@+id/i5">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/share"
                android:background="@mipmap/ic_share"
                android:text="General"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i7"
            android:layout_toRightOf="@+id/i6">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/delete"
                android:background="@mipmap/ic_delete"
                android:text="General"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i8"
            android:layout_toRightOf="@+id/i7">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_processing"
                android:background="@mipmap/ic_editing"
                android:text="General"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>
