<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_editing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blur1"
    tools:context="com.example.amine.securityapp.imageEditing">




    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/enhance"
        android:background="@drawable/buttoncolor2"
        android:text="enhance"
        android:textSize="12dp"
        android:layout_marginLeft="193dp"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/transparent"
        android:text="Transparent"
        android:textSize="12dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/blurring"
        android:textSize="15dp"
        android:text="blurring"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="450dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:id="@+id/edge_detection"
        android:text="edge detection"
        android:textSize="12dp"
        android:background="@drawable/buttoncolor2"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="450dp"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/camera"
        android:src="@mipmap/ic_cam"
        android:layout_marginLeft="3dp" />


    <ImageView
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/gallery"
        android:layout_marginLeft="335dp"
        android:src="@mipmap/ic_gallery"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:id="@+id/draw"
        android:layout_marginTop="70dp"
        />


</RelativeLayout>
