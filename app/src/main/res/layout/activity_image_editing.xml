<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_editing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wallpaper"
    tools:context="com.example.amine.securityapp.imageEditing">


    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="280dp"
        android:text="Image Drawing"
        android:id="@+id/id"
        android:background="@drawable/buttoncolor"
        android:elevation="0dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="187dp"
        android:text="Image processing"
        android:textSize="12dp"
        android:id="@+id/ip"
        android:background="@drawable/buttoncolor"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="95dp"
        android:text="Image enhancement"
        android:id="@+id/ie"
        android:textSize="10dp"
        android:background="@drawable/buttoncolor"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:text="Image filters"
        android:background="@drawable/buttoncolor"
        android:id="@+id/iff" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="65dp"
        android:id="@+id/draw" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/transparent"
        android:background="@drawable/buttoncolor2"
        android:text="transparent"
        android:textSize="9dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:id="@+id/blue"
        android:text="blue"
        android:textSize="12dp"
        android:background="@drawable/buttoncolor2"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="450dp"
        android:id="@+id/green"
        android:text="green"
        android:textSize="12dp"
        android:background="@drawable/buttoncolor2"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:id="@+id/red"
        android:text="red"
        android:textSize="12dp"
        android:background="@drawable/buttoncolor2"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/sepia"
        android:text="sepia"
        android:textSize="12dp"
        android:background="@drawable/buttoncolor2"
        android:layout_marginTop="450dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/negative"
        android:textSize="9dp"
        android:text="negative"
        android:background="@drawable/buttoncolor2"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="450dp" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/camera"
        android:src="@drawable/camera2"
        android:layout_marginLeft="3dp" />


    <ImageView
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:id="@+id/gallery"
        android:layout_marginLeft="335dp"
        android:src="@drawable/gallery"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/save"
        android:layout_marginLeft="170dp"
        android:src="@drawable/save2"/>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/anticlockwise"
        android:src="@drawable/rotate_anticlockwise1"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="camera"
        android:id="@+id/textView8"
        android:layout_below="@+id/save"
        android:layout_alignStart="@+id/camera" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="rotate-"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="rotate+"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="175dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="save"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="335dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="gallery"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/save"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/clockwise"
        android:src="@drawable/rotate_cw1" />

</RelativeLayout>
