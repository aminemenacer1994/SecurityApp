<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio_recording"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="10dp"
    android:padding="10dp"
    android:background="@drawable/blur1"
    tools:context="com.example.amine.securityapp.audioRecording">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#0d4023"
            android:textSize="30dp"/>

    </RelativeLayout>


    <ImageView
        android:layout_width="230dp"
        android:layout_height="270dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mic"
        android:layout_centerInParent="true"
        android:id="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/audio_info"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#000"
        android:textStyle="bold" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/parent"
        android:layout_below="@+id/button">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i4"
            android:layout_toRightOf="@+id/i3">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button4"
                android:background="@mipmap/ic_pause"
                android:text="General"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i3">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button3"
                android:background="@mipmap/ic_play"
                android:text="General"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i5"
            android:layout_toRightOf="@+id/i4">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button2"
                android:background="@mipmap/ic_stop"
                android:text="General"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/i6"
            android:layout_toRightOf="@+id/i5">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/settings"
                android:background="@mipmap/ic_settings"
                android:text="General"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
